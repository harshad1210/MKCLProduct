generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  ADMIN
  SYSADMIN
  SPC
}

model User {
  id             Int      @id @default(autoincrement())
  employeeName   String
  mobileNumber   String
  email          String   @unique
  username       String   @unique
  password       String
  role           Role     @default(SPC)
  updatedBy      String?
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  url         String?
  logoUrl     String?
  isActive    Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  documents      Document[]
}

model Document {
  id         Int      @id @default(autoincrement())
  type       String
  name       String?
  url        String?
  productId  Int
  product    Product  @relation(fields: [productId], references: [id])
  uploadedBy String?
  downloadCount Int      @default(0)
  createdAt  DateTime @default(now())
}

model SiteAsset {
  key   String @id
  value String
}

model AuditLog {
  id          Int      @id @default(autoincrement())
  action      String
  entity      String
  entityId    String?
  details     String?
  performedBy String
  timestamp   DateTime @default(now())
}
